/* pages/book-detail/book-detail.wxss */

.info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50rpx 0;
}

.info image {
  width: 220rpx;
  height: 300rpx;
  box-shadow: 0 0 20rpx 1rpx rgba(0, 0, 0, 0.2);
}

.tit {
  font-size: 32rpx;
  margin: 50rpx 0;
}

.author {
  font-size: 24rpx;
  color: #149bb3;
}

.tab {
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #d8d8d8;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #999;
}

.tab text.active {
  border-bottom: 2px solid #444;
  color: #333;
}

.intro {
  height: 380rpx;
  /* background: #b89477; */
  font-size: 28rpx;
  line-height: 50rpx;
  padding: 30rpx;
}

.catalog view {
  line-height: 100rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #d8d8d8;
  margin-left: 40rpx;
}
.blank{
  display: none;
}
.reviewTitle{
  /* height: 48rpx; */
  height: 50rpx;
  border-top: 1px solid #d8d8d8;
  border-bottom: 1px solid #d8d8d8;
  margin: 0 30rpx;
  padding: 15rpx 0;
  display: flex;
  align-items:center;
  /* justify-content: space-around; */
}
.reviewTitle .title{
  display: inline-block;
  font-size: 25rpx;
  color: #444444;
  margin-right: 15rpx;
}
.reviewTitle .num{
  display: inline-block;
  font-size: 20rpx;
  color: #b3b3b3;
  
}
.reviewTitle .writeTit{
  /* display: inline-block; */
  width: 132rpx;
  height: 48rpx;
  border-radius: 100rpx;
  border: 1px solid #b89477;
  color:  #b89477;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  position: absolute;
  right: 30rpx;
  display: flex;
  align-items:center;
  justify-content: space-around;
}

.review {
  display: flex;
  align-items:center;
  justify-content: space-around;
  margin: 0 30rpx;
  border-bottom: 1px solid #d8d8d8;
  padding:20rpx 0; 
}

.review .userReview {
  width: 15%;
  /* height: 100%; *//* background: #149bb3; */
  text-align: center;
  /* display: flex;   *//* align-items:center; *//* justify-content:space-around; */
}

.review image {
  /* margin-top: 60rpx; */
  height: 64rpx;
  width: 64rpx;
  border-radius: 100%;
  display: inline-block;
  /* margin-bottom: 45rpx; *//* margin-right: 10rpx; */
}

.review text {
  display: inline-block;
  font-size: 30rpx;
  /* margin-right: 30rpx; */
  width: 100%;
  color: #b89477;
}

.review .word {
  width: 85%;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #838383;
  /* background: #b89477; *//* border-bottom: 1px solid #d8d8d8; */
  display: inline-block;
  /* margin:0 40rpx; */
}
.review :last-child {
  border-bottom: 0px solid #d8d8d8;
}
.catalog view:last-child {
  margin-left: 0;
  padding-left: 40rpx;
}

.btn-cont {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  line-height: 100rpx;
  box-shadow: 0 0 20rpx 1rpx rgba(0, 0, 0, 0.2);
  background: #fff;
  display: flex;
}

.btn-cont view {
  width: 50%;
  text-align: center;
  font-size: 28rpx;
}

.btn-cont view:last-child {
  background: #b89477;
  color: #fff;
}

page {
  padding-bottom: 110rpx;
}

.color-gray {
  color: #999;
}
.write{
  position: fixed;
  display: inline-block;
  bottom: 0rpx;
  left: 0;
  width: 100%;
  height:300rpx;
  line-height: 100rpx;
  box-shadow: 0 0 20rpx 1rpx rgba(0, 0, 0, 0.2);
  background: #fff;
  justify-content: space-around;
  z-index: 3;
  text-align: center;
  padding: 0 24rpx;
}
.write textarea{
  padding-top: 30rpx;
  height: 150rpx;
}
.write button{
  display: inline-block;
  text-align: center;
  font-size: 40rpx;  
  position: fixed;
  width: 90%;
  line-height: 100rpx;
  box-shadow: 0 0 20rpx 1rpx rgba(0, 0, 0, 0.1);
  color: #999999;
  left: 36rpx;
}

