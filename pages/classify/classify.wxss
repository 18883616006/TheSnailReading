.main{
  /* border: 1px solid red; */
  box-sizing: border-box;
  padding: 30rpx;
}
.fs-20{
  font-size: 20rpx;
}
.cont{
  display: flex;
  justify-content: space-between
}
.cont .item{
  width: 330rpx;
  height: 200rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
}
.cont .item image,
.cont .item>view{
  width: 100%;
  height: 100%;
}

.cont .item>view{
  /* border: 1px solid red; */
  position: absolute;
  top: 0;
  left: 0;
  color: #FFF;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.cont .tit{
  letter-spacing: 30rpx;
  margin-left: 30rpx;
}
.cont .fs-20{
  letter-spacing: 10rpx;
  margin-top: 20rpx;
}

.line{
  height: 1rpx;
  background: #f1f1f1;
  margin: 40rpx 0;
  text-align: center;
}

.line text{
  display: inline-block;
  width: 95rpx;
  background: #FFF;
  font-size: 26rpx;
  position: relative;
  top: -12px
}

.classify {
  flex-wrap: wrap;
}
.classify .item{
  width: 220rpx;
  height: 220rpx;
  margin-bottom: 30rpx;
}

.classify .item>view{
  justify-content: flex-start;
  align-items: flex-start;
}
.classify .item .tit{
  letter-spacing: 0;
  margin-top: 20rpx;
}