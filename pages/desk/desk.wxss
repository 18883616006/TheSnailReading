/* pages/desk/desk.wxss */
swiper,
swiper-item,
.slide-image{
  width: 400rpx;
  height: 580rpx;
}

swiper{
  margin: 80rpx auto;
  border-radius: 10rpx;
  overflow: hidden
}

.line-cont{
  display: flex;
  justify-content: center;
}
.line-cont view{
  width: 40rpx;
  height: 5rpx;
  background: #ececec;
  /* background: red; */
  border-radius: 3rpx;
}
.line-cont .active{
  background: #444
}

.tit{
  text-align: center;
  margin: 40rpx;
}
.author{
  font-size: 28rpx;
  color: lightskyblue;
  text-align: center;
}
.icon-cont{
  text-align: right;
  padding:20rpx 40rpx;
}

.icon-cont .iconfont{
  font-size: 60rpx;
  color: #d8d8d8;
}

.all-book{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #FFF;
  transform: scale(0);
  transition: all 1s;
}

.all-book.show{
  transform: scale(1)
}


.cont{
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  /* border: 1px solid red; */
  height: 900rpx;
  overflow-y: scroll;
}
.item{
  width: 180rpx;
  height: 350rpx;
  font-size: 26rpx;
  line-height:38rpx;
  margin-right:75rpx; 
  position: relative;
}
.item:nth-child(3n){
  margin-right: 0;
}
.item image{
  width: 100%;
  height: 250rpx;
  box-shadow: 0 0 20rpx 1rpx rgba(0, 0, 0, 0.2)
}
.item .icon-xuanze{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 40rpx;
  color: rgba(0,0,0,0.6)
}
.item .icon-xuanze.active{
  color: #5fd06c;
}
.top-cont{
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #d8d8d8;
}

.botm-cont{
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  line-height: 100rpx;
  background: #ececec;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%
}
.botm-cont text{
  display: block;
  width: 50%;
  text-align: center;
}
.botm-cont text:last-child{
  color: #FF5566;
}
.foothidden{
  display: none;
}